# ================================
# BACKEND .ENV PARA DOKPLOI
# ================================

# Aplicación
APP_NAME=CryptoWorld
APP_ENV=production
APP_KEY=base64:GENERA_UNA_NUEVA_CON_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://api.cryptoworld.cloud
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Frontend URL
FRONTEND_URL=https://cryptoworld.cloud

# Base de datos MySQL (Conecta al servicio MySQL de Dokploi)
DB_CONNECTION=mysql
DB_HOST=TU_HOST_MYSQL_DOKPLOI
DB_PORT=3306
DB_DATABASE=cryptoworld
DB_USERNAME=TU_USUARIO_MYSQL_DOKPLOI
DB_PASSWORD=TU_PASSWORD_MYSQL_DOKPLOI

# Broadcasting
BROADCAST_CONNECTION=log

# Cache
CACHE_STORE=file
CACHE_PREFIX=

# Filesystem
FILESYSTEM_DISK=local

# Queue
QUEUE_CONNECTION=sync

# Session
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=.cryptoworld.cloud
SESSION_SECURE_COOKIE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=lax

# Logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# CORS & Sanctum (para autenticación con frontend)
SANCTUM_STATEFUL_DOMAINS=cryptoworld.cloud,www.cryptoworld.cloud

# JWT Authentication (tymon/jwt-auth)
JWT_SECRET=GENERA_UN_JWT_SECRET_CON_php_artisan_jwt:secret
JWT_TTL=60
JWT_REFRESH_TTL=20160
JWT_ALGO=HS256

# Mail (Configura según tu servicio)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@cryptoworld.cloud"
MAIL_FROM_NAME="${APP_NAME}"

# API Keys Externas
COINRANKING_API_KEY=TU_COINRANKING_API_KEY

# Vite (para producción no se usa, pero déjalo)
VITE_APP_NAME="${APP_NAME}"
