    "components": {
        "schemas": {
            "AuthError": {
                "title": "Error de autenticación",
                "properties": {
                    "error": {
                        "type": "string",
                        "example": "Credenciales inválidas"
                    }
                },
                "type": "object"
            },
            "AuthResponse": {
                "title": "Respuesta de Autenticación",
                "required": [
                    "user",
                    "token"
                ],
                "properties": {
                    "user": {
                        "$ref": "#/components/schemas/User"
                    },
                    "token": {
                        "description": "JWT token de acceso",
                        "type": "string",
                        "example": "eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..."
                    }
                },
                "type": "object"
            },
            "Coin": {
                "title": "Criptomoneda",
                "required": [
                    "uuid",
                    "name",
                    "symbol",
                    "price"
                ],
                "properties": {
                    "uuid": {
                        "type": "string",
                        "example": "Qwsogvtv82FCd"
                    },
                    "name": {
                        "type": "string",
                        "example": "Bitcoin"
                    },
                    "symbol": {
                        "type": "string",
                        "example": "BTC"
                    },
                    "iconUrl": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://cdn.coinranking.com/btc.svg"
                    },
                    "price": {
                        "type": "string",
                        "example": "27000.50"
                    },
                    "marketCap": {
                        "type": "string",
                        "example": "520000000000"
                    },
                    "change": {
                        "type": "string",
                        "example": "-0.25"
                    }
                },
                "type": "object"
            },
            "CoinSearchResult": {
                "title": "Resultado búsqueda de criptomoneda",
                "required": [
                    "uuid",
                    "name",
                    "symbol",
                    "iconUrl"
                ],
                "properties": {
                    "uuid": {
                        "type": "string",
                        "example": "razxDUgYGNAdQ"
                    },
                    "name": {
                        "type": "string",
                        "example": "Ethereum"
                    },
                    "symbol": {
                        "type": "string",
                        "example": "ETH"
                    },
                    "iconUrl": {
                        "type": "string",
                        "format": "uri",
                        "example": "https://cdn.coinranking.com/eth.svg"
                    }
                },
                "type": "object"
            },
            "CoinDetailResponse": {
                "title": "Detalle Criptomoneda",
                "properties": {
                    "coin": {
                        "$ref": "#/components/schemas/Coin"
                    },
                    "watchlistUuids": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "example": [
                            "Qwsogvtv82FCd",
                            "razxDUgYGNAdQ"
                        ]
                    }
                },
                "type": "object"
            },
            "CoinPriceResponse": {
                "title": "Precio histórico de criptomoneda",
                "required": [
                    "status",
                    "data"
                ],
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "success"
                    },
                    "data": {
                        "properties": {
                            "price": {
                                "type": "string",
                                "example": "26543.21"
                            },
                            "timestamp": {
                                "type": "integer",
                                "example": 1695158400
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "LoginInput": {
                "required": [
                    "email",
                    "password"
                ],
                "properties": {
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "juan@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "secret123"
                    }
                },
                "type": "object"
            },
            "RegisterInput": {
                "required": [
                    "name",
                    "email",
                    "password"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Juan Perez"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "juan@example.com"
                    },
                    "password": {
                        "type": "string",
                        "format": "password",
                        "example": "secret123"
                    },
                    "rol": {
                        "type": "string",
                        "example": "normal"
                    },
                    "balance": {
                        "type": "number",
                        "example": 0
                    }
                },
                "type": "object"
            },
            "Unauthorized": {
                "title": "No autorizado",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "No autorizado"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "Usuario",
                "required": [
                    "id",
                    "name",
                    "email",
                    "rol"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Luis"
                    },
                    "email": {
                        "type": "string",
                        "example": "luis@crypto.com"
                    },
                    "rol": {
                        "type": "string",
                        "enum": [
                            "pro",
                            "normal"
                        ],
                        "example": "normal"
                    }
                },
                "type": "object"
            },
            "UserInput": {
                "required": [
                    "name",
                    "email",
                    "password",
                    "rol"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Luis"
                    },
                    "email": {
                        "type": "string",
                        "example": "luis@crypto.com"
                    },
                    "password": {
                        "type": "integer",
                        "example": 1234
                    },
                    "rol": {
                        "type": "string",
                        "enum": [
                            "pro",
                            "normal"
                        ],
                        "example": "pro"
                    }
                },
                "type": "object"
            },
            "ValidationError": {
                "title": "Validation Error",
                "required": [
                    "errors"
                ],
                "properties": {
                    "errors": {
                        "type": "object",
                        "example": {
                            "email": [
                                "The email field is required."
                            ],
                            "password": [
                                "The password must be at least 8 characters."
                            ]
                        },
                        "additionalProperties": {
                            "schema": "ValidationErrorSchema",
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "type": "object"
            },
            "ValidationErrorSchema": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "NotFound": {
                "title": "Not Found",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Resource not found"
                    }
                },
                "type": "object"
            },
            "Success": {
                "title": "Success",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "Operación realizada con éxito"
                    }
                },
                "type": "object"
            },
            "ServerError": {
                "title": "Server Error",
                "properties": {
                    "status": {
                        "type": "string",
                        "example": "error"
                    },
                    "message": {
                        "type": "string",
                        "example": "Error interno del servidor"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "apiKey",
                "description": "Introduce tu JWT en el formato: Bearer {token}",
                "name": "Authorization",
                "in": "header"
            }
        }
    },
    "tags": [
        {
            "name": "Autenticación",
            "description": "Autenticación"
        },
        {
            "name": "Criptomonedas",
            "description": "Criptomonedas"
        },
        {
            "name": "Usuarios",
            "description": "Usuarios"
        }
    ],
    "security": [
        {
            "bearerAuth": []
        }
    ]
}